<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
<title>Sherpa Signup</title>
<link rel="stylesheet" href="/css/sherpa/styles.css" type="text/css" />
<script type="text/javascript">
    var theForm;
    var requestSubmitted = false;  

    function disableButton(btn,form,buttonType) {
        if (!requestSubmitted) {
            var submitMessage = "Please Wait...  ";
            btn.value = submitMessage;
            theForm = form;
            btn.disabled = true;
            requestSubmitted = true;
            setTimeout("submitIt()", 250);
        } else {
            return false;
        }
    }
    function submitIt() {
        theForm.submit();
        return false;
    }
</script>
</head>
<body>


  <div id="top">
		  <p class="sherpa_logo">
			<a href="/"><img border="0" src="/img/sherpa/logo.gif"></a>
			</p>
	  <div id="right_top">
			<a href="/cgi-bin/sherpa/signup.cgi">
				<img border="0" src="/img/sherpa/ready.gif"></a>
		<div id="buttons">
			<a href="http://sherpa.redhotpenguin.com/learn.html">
				<img border="0" src="/img/sherpa/buttons/learn_more_off.gif"></a>
			<a href="/cgi-bin/sherpa/signup.cgi">
				<img border="0" src="/img/sherpa/buttons/signup_on.gif"></a>
		</div>
	  </div>
  </div>
  <div id="main">
	  <div id="tanbar">  
	<img src="/img/sherpa/tanbar.gif">
	</div>



<div id="content">
<form method="post" action="/cgi-bin/sherpa/signup.cgi" name="signup">
<input type="hidden" name="rm" value="thanks">

  <p class="content">Thank you for your interest in the Sherpa email reply service.<br />  Please complete the following form to register for your free trial Sherpa account.</p>
    [% IF any_errors %]
    <p class="content"><font color="red">Please correct the fields highlighted in red</font></p>
  [% END %]  
  [% IF err_login %]
    <p class="content"><font color="red">There was a problem with your Basecamp login information</font></p>
  [% END %]

  [% IF err_url %]
    <p class="content"><font color="red">There was a problem with your Basecamp URL</font></p>
  [% END %]

  [% IF err_dupe_user %]
    <p class="content"><font color="red">Sorry you've already signed up with that email address and basecamp user combination.</font></p>
  [% END %]
    <input type="hidden" name="dupe_user" value="1">
  [% IF err_name %]
    <p class="content"><font color="red">
    [% ELSE %]
    <p class="content">
    [% END %]
    Sherpa account name (choose a 10 letter word, e.g. sherpa)</font>
    <br />
    <input type="text" size="10" maxlength="10" name="name" value="[% name %]"></p>

   [% IF err_email %]
    <p class="content"><font color="red">
    [% ELSE %]
  <p class="content">
    [% END %]
    Email address from which you will be forwarding Basecamp replies</font>
    <br /><input type="text" size="25" maxlength="50" name="email" value="[% email %]"></p>

    [% IF err_login %]
  <p class="content"><font color="red">Basecamp Username</font>
    [% ELSE %]
  <p class="content">Basecamp Username
  [% END %]
    <br />
    <input type="text" size="10" maxlength="25" name="login" value="[% login %]"></p>

    [% IF err_login %]
  <p class="content"><font color="red">Basecamp Password *</font>
    [% ELSE %]
  <p class="content">Basecamp Password *
  [% END %]
    <br />
    <input type="password" size="10" maxlength="25" name="pass" value="[% pass %]"></p>

    [% IF err_url %]
  <p class="content"><font color="red">
    [% ELSE %]
  <p class="content">
  [% END %]
  Basecamp URL e.g. http://yoursite.clientsection.com</font>
    <br />
    <input type="text" size="25" maxlength="50" name="url" value="[% url %]"></p>

  <p style="text-align: left;" class="signup_button"><input type="submit" value="Signup" onclick="javascript: return disableButton(this,signup,null)"></p>
</form>
<p class="content">* Your password is needed to post your comments to Basecamp.  It is stored encrypted in our database.  We take security very seriously.</p>

</div>
</div>
	<img class="signup_bevel" src="/img/sherpa/whitebevel.gif">
</body>
</html>

